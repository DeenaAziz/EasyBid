<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent" android:layout_height="match_parent">


    <Button
        android:id="@+id/incompleted"
        android:layout_width="142dp"
        android:layout_height="90dp"
        android:layout_above="@+id/canceled"
        android:layout_alignStart="@+id/canceled"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btn1"
        android:text="@string/incompleted"
        android:textColor="#1B998B"
        android:textStyle="bold" />

    <Button
        android:id="@+id/canceled"

        android:layout_width="142dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:background="@drawable/btn1"
        android:text="@string/canceled"
        android:textColor="#1B998B"
        android:textStyle="bold" />

    <Button
        android:id="@+id/completed"
        android:layout_width="142dp"
        android:layout_height="90dp"
        android:layout_above="@+id/incompleted"
        android:layout_alignStart="@+id/incompleted"
        android:layout_marginBottom="37dp"
        android:background="@drawable/btn1"
        android:text="@string/completed"
        android:textColor="#1B998B"
        android:textStyle="bold" />
    

</RelativeLayout>
